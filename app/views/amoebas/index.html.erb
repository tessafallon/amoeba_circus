<h1>Listing amoebas</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Generation</th>
    <th>Talent</th>
    <th></th>
    <th></th>
  </tr>

<% @amoebas.each do |amoeba| %>
  <tr>
    <td><%= amoeba.name %></td>
    <td><%= amoeba.generation %></td>
    <td><%= amoeba.talents.pluck(:name)[0] %></td>
    <td><%= link_to 'Show', amoeba %></td>
    <td><%= link_to 'Edit', edit_amoeba_path(amoeba) %></td>
    <td><%= link_to 'Destroy', amoeba, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

